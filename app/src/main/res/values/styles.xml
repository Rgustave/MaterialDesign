<resources>


    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--    Parent theme for all  Pre-Lolipop  above versions. ie all devices,...  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:colorControlActivated">@color/colorControlActivated</item>-->
        <!--<item name="android:colorButtonNormal">@color/buttonNormal</item>-->
        <item name="android:textColorHighlight">@color/colorControlhighlight</item>

    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@android:color/white
        </item><!-- Text color for  toolbar title -->
        <item name="android:textColorSecondary">@android:color/white</item><!-- This the color of overflow MENU and the color
                                                                                 of navigation drawer menu-->
    </style>

    <style name="PopupThem" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@android:color/darker_gray
        </item><!-- Text color for  toolbar title -->
        <item name="android:background">#fffcfff6</item> <!-- Background of overflow Menu   -->

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
